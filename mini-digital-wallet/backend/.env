# Environment (development|production|test)
NODE_ENV=development

# App
PORT=4000
LOG_LEVEL=info
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Postgres (either DATABASE_URL or individual parts)
DATABASE_URL=postgres://wallet_user:password@localhost:5432/digital_wallet_db
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=wallet_user
# DB_PASSWORD=password
# DB_NAME=digital_wallet_db

# Redis (optional, used for caching / sessions / rate-limiting)
REDIS_URL=redis://:password@localhost:6379/0
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Auth / security
JWT_SECRET=replace_with_a_strong_random_value
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# Payments (Stripe example)
PAYMENTS_PROVIDER=stripe
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXX

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=mailer@example.com
SMTP_PASSWORD=replace_smtp_password
EMAIL_FROM="Wallet <no-reply@example.com>"

# Third-party / monitoring
SENTRY_DSN=
EXCHANGE_RATES_API_KEY=

# App-specific defaults
DEFAULT_CURRENCY=USD
MIN_WITHDRAWAL_AMOUNT=1.00
MAX_DAILY_TRANSFER_AMOUNT=10000.00
ENABLE_TEST_PAYMENTS=true

# Feature flags / misc
MAINTENANCE_MODE=false

# Notes:
# - Replace placeholders with real secrets in production.
# - Keep this file out of version control; add to .gitignore.