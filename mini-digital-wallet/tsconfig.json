{
  "compilerOptions": {
    "target": "ES2020",            // modern JS features
    "module": "commonjs",          // Node.js module system
    "strict": true,                // enable all strict type checks
    "esModuleInterop": true,       // for importing modern JS libraries
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true, 
    "outDir": "./dist",            // compiled JS goes here
    "rootDir": "./src",            // TS source files live here
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"]
}
